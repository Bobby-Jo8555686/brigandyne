<form class="{{cssClass}}" autocomplete="off">
    <h1 class="main-title">Brigandyne</h1>

    <header class="sheet-header flexrow" style="align-items: flex-start; gap: 20px;">
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" style="flex: 0 0 160px; height: 250px; object-fit: cover; border: 2px solid #111; border-radius: 5px;"/>
        
        <div class="header-bio flexcolumn" style="flex: 1; gap: 8px;">
            <div class="bio-line flexrow" style="align-items: center;">
                <label style="flex: 0 0 120px; font-weight: bold;">Nom, surnom</label>
                <input name="name" type="text" value="{{actor.name}}" style="flex: 1;"/>
            </div>
            
            {{#if (eq actor.type "personnage")}}
            <div class="bio-line flexrow" style="align-items: center;">
                <label style="flex: 0 0 120px; font-weight: bold;">Peuple, sang</label>
                <input type="text" value="{{#each origines}}{{name}}{{/each}}" readonly title="Géré via l'onglet Biographie" style="flex: 1; background: rgba(0,0,0,0.05); border: 1px solid #ccc;"/>
            </div>
            <div class="bio-line flexrow" style="align-items: center;">
                <label style="flex: 0 0 120px; font-weight: bold;">Archétype</label>
                <input type="text" value="{{#each archetypes}}{{name}}{{/each}}" readonly title="Géré via l'onglet Biographie" style="flex: 1; background: rgba(0,0,0,0.05); border: 1px solid #ccc;"/>
            </div>
            <div class="bio-line flexrow" style="align-items: center;">
                <label style="flex: 0 0 120px; font-weight: bold;">Carrière(s)</label>
                <input type="text" value="{{#each carrieres}}{{name}} {{/each}}" readonly title="Géré via l'onglet Biographie" style="flex: 1; background: rgba(0,0,0,0.05); border: 1px solid #ccc;"/>
            </div>
            
            {{else}}
            <div class="bio-line flexrow" style="align-items: center;">
                <label style="flex: 0 0 120px; font-weight: bold; color: #5b1a1a;">Type de PNJ</label>
                <select name="system.type_pnj" style="flex: 1; font-family: 'Palatino Linotype', serif;">
                    {{selectOptions pnjTypes selected=system.type_pnj}}
                </select>
            </div>
            <div class="bio-line flexrow" style="align-items: center;">
                <label style="flex: 0 0 120px; font-weight: bold;">Origine (Info)</label>
                <input type="text" name="system.origine" value="{{system.origine}}" placeholder="Ex: Cité libre..." style="flex: 1;"/>
            </div>
            <div class="bio-line flexrow" style="align-items: center;">
                <label style="flex: 0 0 120px; font-weight: bold;">Archétype (Info)</label>
                <input type="text" name="system.archetype" value="{{system.archetype}}" placeholder="Ex: Combattant..." style="flex: 1;"/>
            </div>
            <div class="bio-line flexrow" style="align-items: center;">
                <label style="flex: 0 0 120px; font-weight: bold;">Carrière (Info)</label>
                <input type="text" name="system.carriere" value="{{system.carriere}}" placeholder="Ex: Mercenaire..." style="flex: 1;"/>
            </div>
            {{/if}}
        </div>

        <div class="header-stats flexcolumn" style="flex: 0 0 140px; align-items: center; gap: 15px;">
            
            <div class="initiative-box flexcolumn" style="width: 100%; align-items: center;">
                <i class="fas fa-flag" style="font-size: 1.5em; margin-bottom: 5px;"></i>
                <label style="font-weight: bold; font-variant: small-caps;">Initiative</label>
                <span style="font-size: 1.5em; font-weight: bold;">{{system.initiative.value}}</span>
            </div>
            
            <div class="initiative-box flexcolumn" style="width: 100%; align-items: center; background: rgba(0,0,0,0.5); border-color: #444;">
                <i class="fas fa-shield-alt" style="font-size: 1.5em; margin-bottom: 5px; color: #aaa;"></i>
                <label style="font-weight: bold; font-variant: small-caps;">Protection</label>
                <span style="font-size: 1.5em; font-weight: bold; color: #e0e0e0;">{{system.protection.value}}</span>
            </div>

            <div class="options-box" style="text-align: center; font-size: 0.85em;">
                <label style="cursor: pointer; line-height: 1;">
                    <input type="checkbox" name="system.options.malus_armure" {{checked system.options.malus_armure}}/>
                    Appliquer malus d'armures
                </label>
            </div>
        </div>
    </header>

    <hr style="border: 1px solid #111; margin: 15px 0;">

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="stats">Caractéristiques</a>
        <a class="item" data-tab="inventory">Inventaire</a>
        {{#if showMagicTab}}
        <a class="item" data-tab="spells">Magie</a>
        {{/if}}
        <a class="item" data-tab="biography">Biographie</a>
    </nav>

    <section class="sheet-body">
        
        <div class="tab stats" data-group="primary" data-tab="stats" style="padding-top: 10px;">
            <div class="flexrow" style="gap: 20px; align-items: flex-start;">
                
                <div class="competences-col flexcolumn" style="flex: 0 0 45%; max-width: 45%; background: rgba(0,0,0,0.2); padding: 10px; border: 1px solid #333; border-radius: 4px;">
                    
                    <div class="comp-header flexrow" style="border-bottom: 2px solid #555; margin-bottom: 10px; padding-bottom: 5px; font-weight: bold; font-family: 'Georgia', serif; font-size: 0.8em; text-transform: uppercase; color: #aaa;">
                        <div style="flex: 2;">Compétences</div>
                        <div style="flex: 0 0 35px; text-align: center;" title="Base">Bs.</div>
                        <div style="flex: 0 0 80px; text-align: center;" title="Progression">Prog.</div>
                        <div style="flex: 0 0 45px; text-align: center;" title="Actuel">Act.</div>
                    </div>
                    
                    <div class="stats-list" style="display: flex; flex-direction: column; gap: 4px;">
                        {{#each system.stats as |stat key|}}
                        <div class="stat-row flexrow" style="align-items: center; border-bottom: 1px solid rgba(255,255,255,0.03); padding-bottom: 3px;">
                            
                            <label class="stat-label rollable" data-key="{{key}}" style="flex: 2; cursor: pointer; font-size: 1.05em; color: #ccc;">
                                {{stat.label}}
                            </label>
                            
                            <div style="flex: 0 0 35px; text-align: center;">
                                <input type="number" class="base-input" name="system.stats.{{key}}.value" value="{{stat.value}}" title="Score de base" style="width: 100%; height: 22px; font-size: 1em;" />
                            </div>
                            
                            <div style="flex: 0 0 80px; text-align: center; display: flex; justify-content: center; gap: 2px; align-items: center;">
                                {{#each stat.progressBoxes}}
                                    <a class="prog-box {{#if this.locked}}locked{{else if this.checked}}checked{{else}}empty{{/if}}" 
                                       data-stat="{{this.statKey}}" 
                                       data-value="{{this.value}}" 
                                       title="{{#if this.locked}}Bloqué par la carrière{{else}}Niveau {{this.value}}{{/if}}"
                                       style="width: 10px; height: 10px;">
                                    </a>
                                {{/each}}
                            </div>
                            
                            <div style="flex: 0 0 45px; text-align: center; display: flex; justify-content: flex-end; gap: 3px; align-items: center;">
                                <div class="actual-box" style="width: 26px; height: 22px; line-height: 22px; font-size: 1em; color: {{#if stat.isModified}}#e74c3c{{else}}#fff{{/if}} !important;" title="Score final validé">
                                    {{stat.total}}
                                </div>
                                <span style="font-size: 0.8em; color: #555; width: 12px;">{{brigandyne-dizaine stat.total}}</span>
                            </div>

                        </div>
                        {{/each}}
                    </div>
                    <div class="handicaps-box" style="margin-top: 15px; border-top: 2px solid #8b0000; padding-top: 10px;">
                        <h3 style="margin: 0 0 10px 0; font-family: 'Georgia', serif; font-size: 1em; color: #ffcccc; text-transform: uppercase;">
                            <i class="fas fa-skull-crossbones" style="color: #8b0000;"></i> États & Handicaps
                        </h3>
                        
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 4px; font-size: 0.85em; color: #ccc;">
                            
                            <label title="1 Désavantage à toutes les actions." style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.affaibli" {{checked system.handicaps.affaibli}} style="width: 12px; height: 12px; margin: 0;"/> Affaibli
                            </label>
                            <label title="Pas de R+, Dégâts -1" style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.affame" {{checked system.handicaps.affame}} style="width: 12px; height: 12px; margin: 0;"/> Affamé/Assoiffé
                            </label>
                            <label title="Test de VOL pour agir, sinon fuit ou passe le tour." style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.apeure" {{checked system.handicaps.apeure}} style="width: 12px; height: 12px; margin: 0;"/> Apeuré
                            </label>
                            <label title="2 Désav. à la vue. Compétences visuelles (TIR, lecture) tombent à 0." style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.aveugle" {{checked system.handicaps.aveugle}} style="width: 12px; height: 12px; margin: 0;"/> Aveuglé
                            </label>
                            <label title="Test de PER pour agir." style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.confus" {{checked system.handicaps.confus}} style="width: 12px; height: 12px; margin: 0;"/> Confus
                            </label>
                            <label title="Pas de R+, Dégâts -1" style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.demoralise" {{checked system.handicaps.demoralise}} style="width: 12px; height: 12px; margin: 0;"/> Démoralisé/Intimidé
                            </label>
                            <label title="Perd 1 PV au début de son tour." style="cursor: pointer; display: flex; align-items: center; gap: 5px; color: #ff5252;">
                                <input type="checkbox" name="system.handicaps.ensanglante" {{checked system.handicaps.ensanglante}} style="width: 12px; height: 12px; margin: 0;"/> Ensanglanté
                            </label>
                            <label title="Test d'END pour agir." style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.essouffle" {{checked system.handicaps.essouffle}} style="width: 12px; height: 12px; margin: 0;"/> Essoufflé
                            </label>
                            <label title="Immobilisé, mais conscient." style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.paralyse" {{checked system.handicaps.paralyse}} style="width: 12px; height: 12px; margin: 0;"/> Paralysé
                            </label>
                            <label title="Test de MOU pour agir." style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.ralenti" {{checked system.handicaps.ralenti}} style="width: 12px; height: 12px; margin: 0;"/> Ralenti
                            </label>
                            <label title="Test de FOR pour agir." style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.sonne" {{checked system.handicaps.sonne}} style="width: 12px; height: 12px; margin: 0;"/> Sonné
                            </label>
                            <label title="Doit fuir ou passer son tour." style="cursor: pointer; display: flex; align-items: center; gap: 5px;">
                                <input type="checkbox" name="system.handicaps.terrorise" {{checked system.handicaps.terrorise}} style="width: 12px; height: 12px; margin: 0;"/> Terrorisé
                            </label>
                        </div>
                        
                        <div style="margin-top: 10px; text-align: center;">
                            <a class="ignore-handicap-btn" title="Dépenser 2 points de Sang-froid pour ignorer un handicap ce tour" style="display: inline-block; background: #8b0000; color: #fff; padding: 3px 8px; border-radius: 3px; font-size: 0.8em; font-weight: bold; cursor: pointer; border: 1px solid #ff5252;">
                                <i class="fas fa-fire-alt"></i> Ignorer (2 SF)
                            </a>
                        </div>
                    </div>
                </div>

                <div class="combat-atouts-col flexcolumn" style="flex: 1; gap: 15px;">
                    
                    <div class="item-section" style="background: rgba(0,0,0,0.2); padding: 10px; border: 1px solid #333; border-radius: 4px;">
                        <div class="item-header flexrow" style="border-bottom: 2px solid #8b0000; margin-bottom: 10px;">
                            <h3 class="item-title" style="margin: 0; font-family: 'Georgia', serif; color: #e0e0e0;"><i class="fas fa-khanda" style="color: #8b0000; font-size: 0.9em; margin-right: 5px;"></i> Armes</h3>
                            <div class="item-controls" style="text-align: right;">
                                <a class="item-control item-create" data-type="arme" title="Créer une Arme" style="font-size: 0.8em; color: #aaa;"><i class="fas fa-plus"></i></a>
                            </div>
                        </div>
                        <ul class="item-list">
                            {{#each armes as |arme id|}}
                            <li class="item flexcolumn" data-item-id="{{arme._id}}" style="padding: 4px 0; border-bottom: 1px dashed #555;">
                                <div class="flexrow" style="align-items: center;">
                                    <div class="item-name flexrow" style="flex: 2; align-items: center;">
                                        <img class="item-rollable" src="{{arme.img}}" title="Attaquer avec {{arme.name}}" width="24" height="24" style="cursor: pointer; margin-right: 8px; border-radius: 3px; border: 1px solid #111;"/>
                                        <h4 class="item-toggle" style="margin: 0; font-weight: bold; cursor: pointer; color: #e0e0e0; font-size: 0.9em;" title="Voir les détails">{{arme.name}}</h4>
                                    </div>
                                    <div class="item-details" style="flex: 1; text-align: center; color: #aaa; font-size: 0.9em;">
                                        <span>DG: {{#if arme.system.utilise_force}}FOR {{#if (gt arme.system.degats_fixe 0)}}+{{arme.system.degats_fixe}}{{else if (lt arme.system.degats_fixe 0)}}{{arme.system.degats_fixe}}{{/if}}{{else}}{{arme.system.degats_fixe}}{{/if}}</span>
                                    </div>
                                    <div class="item-controls" style="flex: 0 0 40px; text-align: right;">
                                        <a class="item-control item-edit" title="Éditer"><i class="fas fa-edit"></i></a>
                                        <a class="item-control item-delete" title="Supprimer"><i class="fas fa-trash"></i></a>
                                    </div>
                                </div>
                                <div class="item-summary" style="display: none; padding-left: 32px; font-size: 0.85em; margin-top: 5px; color: #aaa; border-left: 2px solid #8b0000; background: rgba(0,0,0,0.02); padding-top: 4px; padding-bottom: 4px;">
                                    <div style="margin-bottom: 3px;"><strong>Type :</strong> {{#if (eq arme.system.type_arme "distance")}}Distance{{else}}Mêlée{{/if}} | <strong>Prise :</strong> {{arme.system.mains}} Main(s)</div>
                                    {{#if arme.system.special}}<div style="margin-bottom: 3px;"><strong>Spécial :</strong> <span style="color: #d4af37;">{{arme.system.special}}</span></div>{{/if}}
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>

                    <div class="item-section" style="background: rgba(0,0,0,0.2); padding: 10px; border: 1px solid #333; border-radius: 4px;">
                        <div class="item-header flexrow" style="border-bottom: 2px solid #d4af37; margin-bottom: 10px;">
                            <h3 class="item-title" style="margin: 0; font-family: 'Georgia', serif; color: #e0e0e0;"><i class="fas fa-star" style="color: #d4af37; font-size: 0.9em; margin-right: 5px;"></i> Atouts</h3>
                            <div class="item-controls" style="text-align: right;">
                                <a class="item-control item-create" data-type="atout" title="Créer un Atout"><i class="fas fa-plus"></i> Ajouter</a>
                            </div>
                        </div>
                        <ul class="item-list">
                            {{#each atouts as |atout id|}}
                            <li class="item flexrow" data-item-id="{{atout._id}}" style="padding: 6px 0; border-bottom: 1px dashed #555; align-items: flex-start;">
                                <div class="item-name flexcolumn" style="flex: 1;">
                                    <h4 style="margin: 0; font-weight: bold; font-family: 'Georgia', serif; font-size: 1.05em; color: #e0e0e0; cursor: pointer;" title="Voir la description">{{atout.name}}</h4>
                                    <div style="font-size: 0.85em; color: #aaa; line-height: 1.3; margin-top: 2px;">
                                        <strong style="color: #ccc;">{{atout.system.type_atout}}</strong>
                                        {{#if atout.system.stat_liee}}<span style="text-transform: uppercase;"> ({{atout.system.stat_liee}})</span>{{/if}}
                                        {{#if atout.system.effet}}<br><em style="color: #85c1e9;">{{atout.system.effet}}</em>{{/if}}
                                    </div>
                                </div>
                                <div class="item-controls" style="flex: 0 0 40px; text-align: right; padding-top: 2px;">
                                    <a class="item-control item-edit" title="Éditer"><i class="fas fa-edit"></i></a>
                                    <a class="item-control item-delete" title="Supprimer"><i class="fas fa-trash"></i></a>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>

                </div> </div>
        </div>

        <div class="tab inventory" data-group="primary" data-tab="inventory">
            
            <div class="inventory-grid flexrow" style="gap: 20px; align-items: flex-start; margin-bottom: 20px;">
                
                <div class="weapons-col flexcolumn" style="flex: 1; gap: 20px;">
                    
                    <div class="item-section">
                        <div class="item-header flexrow" style="border-bottom: 2px solid #8b0000; margin-bottom: 10px;">
                            <h3 class="item-title" style="margin: 0; font-family: 'Georgia', serif; color: #e0e0e0;"><i class="fas fa-khanda" style="color: #8b0000; font-size: 0.9em; margin-right: 5px;"></i> Armes de Mêlée</h3>
                            <div class="item-controls" style="text-align: right;">
                                <a class="item-control item-create" data-type="arme" title="Créer Arme"><i class="fas fa-plus"></i></a>
                            </div>
                        </div>
                        <ul class="item-list">
                            {{#each armes as |arme id|}}
                            {{#if (eq arme.system.type_arme "melee")}}
                            <li class="item flexcolumn" data-item-id="{{arme._id}}" style="padding: 5px 0; border-bottom: 1px dashed #555;">
                                <div class="flexrow" style="align-items: center;">
                                    <div class="item-name flexrow" style="flex: 2; align-items: center;">
                                        <img class="item-rollable" src="{{arme.img}}" title="Attaquer avec {{arme.name}}" width="24" height="24" style="cursor: pointer; margin-right: 8px; border-radius: 3px; border: 1px solid #111;"/>
                                        <h4 class="item-toggle" style="margin: 0; font-weight: bold; cursor: pointer; color: #e0e0e0; font-size: 0.9em;" title="Voir les détails">{{arme.name}}</h4>
                                    </div>
                                    <div class="item-details" style="flex: 1; text-align: center; color: #aaa;">
                                        <span>DG: {{#if arme.system.utilise_force}}FOR {{#if (gt arme.system.degats_fixe 0)}}+{{arme.system.degats_fixe}}{{else if (lt arme.system.degats_fixe 0)}}{{arme.system.degats_fixe}}{{/if}}{{else}}{{arme.system.degats_fixe}}{{/if}}</span>
                                    </div>
                                    <div class="item-controls" style="flex: 0 0 40px; text-align: right;">
                                        <a class="item-control item-edit" title="Éditer"><i class="fas fa-edit"></i></a>
                                        <a class="item-control item-delete" title="Supprimer"><i class="fas fa-trash"></i></a>
                                    </div>
                                </div>
                                
                                <div class="item-summary" style="display: none; padding-left: 32px; font-size: 0.85em; margin-top: 5px; color: #aaa; border-left: 2px solid #8b0000; background: rgba(0,0,0,0.02); padding-top: 4px; padding-bottom: 4px;">
                                    <div style="margin-bottom: 3px;"><strong>Prise :</strong> {{arme.system.mains}} Main(s)</div>
                                    {{#if arme.system.special}}
                                    <div style="margin-bottom: 3px;"><strong>Spécial :</strong> <span style="color: #d4af37;">{{arme.system.special}}</span></div>
                                    {{/if}}
                                    {{#if arme.system.description}}
                                    <div style="margin-top: 5px; border-top: 1px dashed #444; padding-top: 5px;">{{{arme.system.description}}}</div>
                                    {{/if}}
                                </div>
                            </li>
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>

                    <div class="item-section">
                        <div class="item-header flexrow" style="border-bottom: 2px solid #4a6491; margin-bottom: 10px;">
                            <h3 class="item-title" style="margin: 0; font-family: 'Georgia', serif; color: #e0e0e0;"><i class="fas fa-crosshairs" style="color: #4a6491; font-size: 0.9em; margin-right: 5px;"></i> Armes à Distance</h3>
                            <div class="item-controls" style="text-align: right;">
                                <a class="item-control item-create" data-type="arme" title="Créer Arme"><i class="fas fa-plus"></i></a>
                            </div>
                        </div>
                        <ul class="item-list">
                            {{#each armes as |arme id|}}
                            {{#if (eq arme.system.type_arme "distance")}}
                            <li class="item flexcolumn" data-item-id="{{arme._id}}" style="padding: 5px 0; border-bottom: 1px dashed #555;">
                                <div class="flexrow" style="align-items: center;">
                                    <div class="item-name flexrow" style="flex: 2; align-items: center;">
                                        <img class="item-rollable" src="{{arme.img}}" title="Tirer avec {{arme.name}}" width="24" height="24" style="cursor: pointer; margin-right: 8px; border-radius: 3px; border: 1px solid #111;"/>
                                        <h4 class="item-toggle" style="margin: 0; font-weight: bold; cursor: pointer; color: #e0e0e0; font-size: 0.9em;" title="Voir les détails">{{arme.name}}</h4>
                                    </div>
                                    <div class="item-details" style="flex: 1; text-align: center; color: #aaa;">
                                        <span>DG: {{#if arme.system.utilise_force}}FOR {{#if (gt arme.system.degats_fixe 0)}}+{{arme.system.degats_fixe}}{{else if (lt arme.system.degats_fixe 0)}}{{arme.system.degats_fixe}}{{/if}}{{else}}{{arme.system.degats_fixe}}{{/if}}</span>
                                    </div>
                                    <div class="item-controls" style="flex: 0 0 40px; text-align: right;">
                                        <a class="item-control item-edit" title="Éditer"><i class="fas fa-edit"></i></a>
                                        <a class="item-control item-delete" title="Supprimer"><i class="fas fa-trash"></i></a>
                                    </div>
                                </div>
                                
                                <div class="item-summary" style="display: none; padding-left: 32px; font-size: 0.85em; margin-top: 5px; color: #aaa; border-left: 2px solid #4a6491; background: rgba(0,0,0,0.02); padding-top: 4px; padding-bottom: 4px;">
                                    <div style="margin-bottom: 3px;"><strong>Prise :</strong> {{arme.system.mains}} Main(s)</div>
                                    <div style="margin-bottom: 3px;"><strong>Portée :</strong> <span style="color: #85c1e9;">{{arme.system.portee}}</span></div>
                                    {{#if arme.system.special}}
                                    <div style="margin-bottom: 3px;"><strong>Spécial :</strong> <span style="color: #d4af37;">{{arme.system.special}}</span></div>
                                    {{/if}}
                                    {{#if arme.system.description}}
